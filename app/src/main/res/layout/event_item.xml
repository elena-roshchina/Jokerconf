<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="2dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/event_time"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:text="9:30"
        android:textColor="@android:color/white"
        android:textSize="28sp"/>
    <TextView
        android:id="@+id/event_title"
        android:layout_toStartOf="@id/set_starred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/event_time"
        android:textColor="@android:color/black"
        tools:text="Java Enterprise Edition for dummies"/>
    <TextView
        android:id="@+id/event_date_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/event_time"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/event_title"
        tools:text="Tue, 9 May / Grand Hall"/>
    <ToggleButton
        android:id="@+id/set_starred"
        android:drawableTop="@drawable/ic_on_off"
        android:background="@drawable/toggle_bg"
        android:paddingTop="10dp"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:textOff=""
        android:textOn=""
        />
    <TextView
        android:id="@+id/event_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_date_place"
        android:layout_toEndOf="@+id/event_time"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

</RelativeLayout>
